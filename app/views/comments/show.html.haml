- model_class = Comment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.comment
  = render 'comments/comment'

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), post_comments_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_comment_path(@comment.post_id, @comment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), post_comment_path(@comment.post_id, @comment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
